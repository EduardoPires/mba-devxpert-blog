@model IEnumerable<MbaDevXpertBlog.Mvc.ViewModels.ComentarioViewModel>

@{
    ViewData["Title"] = "Autores";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Meus Comentários</h1>
<partial name="_ReturnMessages" />
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.PostId)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.AutorId)
                        </th>
                        <th class ="col-3">
                            @Html.DisplayNameFor(model => model.Conteudo)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.PostId)
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.AutorId)
                            </td>
                            <td class="col-4">
                                @Html.DisplayFor(modelItem => item.Conteudo)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-sm">Detalhes</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
