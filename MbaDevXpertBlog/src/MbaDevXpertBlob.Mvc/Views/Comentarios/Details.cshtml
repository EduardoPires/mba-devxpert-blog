@model MbaDevXpertBlog.Mvc.ViewModels.ComentarioViewModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4>Comentário</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Conteudo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Conteudo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </div>
</div>
